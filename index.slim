  modules = {
    cus_seg: {
      name: 'Segmentos de mercado',
      txt: 'Una empresa atiende a uno o varios segmentos de mercado.',
      effect: 'fade-down-right',
      img: 'mod_1.png'
    },
    val_pro: {
