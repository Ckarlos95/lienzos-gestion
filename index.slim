    },
    cos_str: {
      name: 'Estructura de costes',
      txt: 'Los diferentes elementos del modelo de negocio conforman la estructura de costes.',
      effect: 'fade-up-left',
      img: 'mod_9.png'
    }
  }

  descriptions = {
    aureo_cos: 'AureoCos',
    biblio_visual: 'Biblio Visual',
    celeritatem: 'Celeritatem',
    cell_guard: 'Cell Guard',
    lapillow: 'Lapillow',
    leap_cricket: 'Leap Cricket',
    loop: 'Loop S.A. de C.V.',
    punto_y_aparte: 'Punto y Aparte',
    the_gainers_team: 'The Gainers Team',
    the_occasional_game: 'The OCCA-sional Game',
    tier_mx: 'TierMX'
  }.each {|key, des| des.replace "Modelo de negocio: #{des}"}

  collage_effects = %w{ zoom-in zoom-out fade-zoom-in fade-zoom-out }



doctype 5
head
  title Lienzos

  - Dir['css/*.css'].each do |css_file|
    link rel="stylesheet" type="text/css" href=css_file
  / link href="https://fonts.googleapis.com/css?family=Lato:400,900|Open+Sans:400,800" rel="stylesheet"

body
  .hero-image
    .hero-text
      h1 Generación de Modelos de Negocio
      br : br
      h5 Gestión empresarial | 2018 - 1

  .container
    .row 
      .col-sm-12
        br
        .explanation
          .title data-aos="fade-left" data-aos-duration=mod_effect_duration
            | ¿Qué es un modelo de negocio?
          .what-is data-aos="fade-right" data-aos-duration="1700"
            | Un modelo de negocio
              describe las bases sobre las que
              una empresa crea, proporciona
              y capta valor.
        br : br
        .modules
          .title data-aos="flip-up" data-aos-duration=mod_effect_duration
            | Los nueve módulos
          .row
            - modules.each do |mod_name, data|
              .mod class="col-lg-4 col-md-12" data-aos=data[:effect] data-aos-duration=mod_effect_duration
                .name.row
                  .mod-img class="col-lg-3 d-none d-xl-block d-lg-block d-xl-none" style="background-image: url('images/modules/#{data[:img]}');"
                  .col-lg-9.col-md-12 = data[:name]
                .content = data[:txt]

    .row.collage : .col-sm-12
      .title data-aos="fade-up" data-aos-duration=mod_effect_duration
        | Collage
      br : br
      .photopile-wrapper
        ul.photopile
          - imgs_full = Dir.entries('images/collage/') - %w{ . .. .keep }
          - imgs_full.shuffle.each do |img|
            - img_nm = img.split('.').first
            li data-aos=collage_effects.sample data-aos-duration=(1800..2400).step(50).to_a.sample data-aos-delay=rand(100..600)
              a href="images/collage/#{img}"
                img.coll-img alt="#{descriptions[img_nm.to_sym]}" src="images/collage/#{img}"
      br : br : br
/! Scripts
- Dir['js/*.js'].each do |js_file|
  script src=js_file
