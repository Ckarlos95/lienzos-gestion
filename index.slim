      txt: 'Las fuentes de ingresos se generan cuando los clientes adquieren las propuestas de valor ofrecidas.',
      effect: 'zoom-in',
      img: 'mod_5.png'
    },
    key_res: {
      name: 'Recursos clave',
      txt: 'Los recursos clave son los activos necesarios para ofrecer y proporcionar los elementos antes descritos …',
      effect: 'fade-left',
      img: 'mod_6.png'
    },
    key_act: {
      name: 'Actividades clave',
      txt: '… mediante una serie de actividades clave.',
      effect: 'fade-up-right',
